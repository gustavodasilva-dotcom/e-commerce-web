@{
    ViewData["Title"] = "Shopping Cart";
}

@section Scripts {

    <script src="~/js/Global/ShoppingCarts.js"></script>

}

    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/Details/ShoppingCarts.css" />
    </head>
    <body>
        <div class="shop-cart-wrapper">
            <h1>@ViewData["Title"]</h1>

            <div id="tabs">
                <ul class="tab-list">
                    <li><a class="tab-option" href="#tab-items">Items</a></li>
                    <li><a class="tab-option" href="#tab-buy-again">Buy again</a></li>
                </ul>

                <hr />

                <div id="tab-items">
                    <div class="shop-cart-card">
                        <h3 class="shop-cart-title"></h3>
                        <p class="shop-cart-price"></p>
                        <p class="shop-cart-descr"></p>
                    </div>
                </div>

                <div id="tab-buy-again">
                </div>
            </div>
        </div>
    </body>