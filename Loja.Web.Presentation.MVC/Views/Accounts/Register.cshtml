@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    ViewData["Title"] = "Register new user";
}

@section Scripts {

    <script src="~/js/Registration/Account/Register.js"></script>

}

    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/Global/00_Global.css" />
    </head>
    <body>
        <div class="register-wrapper">

            <!--- Modal --->
            <div id="div_Message" class="modal">

                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p></p>
                </div>

            </div>
            <!--- Modal --->

            <div>
                <h1 class="register-title">Register</h1>
            </div>

            <form>

                <div class="register-form">

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" name="edt_Name" id="edt_Name" placeholder="Name" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" name="edt_Email" id="edt_Email" placeholder="E-mail" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" name="edt_Login" id="edt_Login" placeholder="Login" />
                    </div>

                    <div class="register-input-field">
                        <input type="password" style="text-transform: uppercase;" class="register-input" name="edt_Password" id="edt_Password" placeholder="Password" />
                    </div>

                    @if (Accessor?.HttpContext?.Session.GetString("Role") == "Employee")
                    {
                        <div class="register-select-field">
                            <select name="roles" class="register-select" id="select_userRoles">
                                <option value=""></option>
                            </select>
                        </div>
                    }

                <div class="register-input-field">
                    <button type="button" class="register-btn-submit" name="register-user" id="register-user">Register</button>
                </div>

            </div>

        </form>

        <div class="register-default-div">
            <a href="~/Accounts/Login">Sign in</a>
        </div>

    </div>
</body>