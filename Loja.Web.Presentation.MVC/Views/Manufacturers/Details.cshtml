@{
    ViewData["Title"] = "Details | Manufacturers";
}

@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="~/js/Registration/Manufacturer/Details.js"></script>

}

    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/Global/00_Global.css" />
    </head>
    <body>
        <div class="register-wrapper">

            <!--- Modal --->
            <div id="div_Message" class="modal">

                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p></p>
                </div>

            </div>
            <!--- Modal --->

            <form>

                <div class="register-form">

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="edt_Name" id="edt_Name" placeholder="Name" />
                    </div>

                    <div class="register-input-field">
                        <label>Brazilian company? </label>
                        <div style="margin-left: 10px;">
                            <input type="radio" class="register-input-radio" name="localition" id="localition_brazil" value="true" checked />
                            <label for="localition_brazil">Yes</label>
                        </div>

                        <div>
                            <input type="radio" class="register-input-radio" name="localition" id="localition_foreign" value="false" />
                            <label for="localition_foreign">No</label>
                        </div>
                    </div>

                    <div id="register-input-foreigh" style="display:none;">
                        <div class="register-input-field">
                            <input type="text" class="register-input" name="edt_Cage" id="edt_Cage" placeholder="CAGE" />
                        </div>

                        <div class="register-input-field">
                            <input type="text" class="register-input" name="edt_Sec" id="edt_Sec" placeholder="SEC" />
                        </div>
                    </div>

                    <div id="register-input-brazilian" style="display:none;">
                        <div class="register-input-field">
                            <input type="text" class="register-input" name="edt_FedTaxPayer" id="edt_FedTaxPayer" placeholder="Federal taxpayer registration" />
                        </div>

                        <div class="register-input-field">
                            <input type="text" class="register-input" name="edt_SttTaxPayer" id="edt_SttTaxPayer" placeholder="State taxpayer registration" />
                        </div>
                    </div>

                    <hr />
                    <h2 class="register-title-2">Contact info</h2>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="edt_Phone" id="edt_Phone" placeholder="Phone" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="edt_Cellphone" id="edt_Cellphone" placeholder="Cellphone" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="edt_Email" id="edt_Email" placeholder="Email" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="edt_Website" id="edt_Website" placeholder="Website" />
                    </div>

                    <hr />
                    <h2 class="register-title-2">Address info</h2>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-postal-code" id="address-postal-code" placeholder="Postal code" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-name" id="address-name" placeholder="Name" />
                    </div>

                    <div class="register-input-field">
                        <input type="number" class="register-input" name="address-number" id="address-number" placeholder="Number" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-comment" id="address-comment" placeholder="Comment" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-neighborhood" id="address-neighborhood" placeholder="Neighborhood" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-city" id="address-city" placeholder="City" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-state" id="address-state" placeholder="State" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" class="register-input" name="address-country" id="address-country" placeholder="Country" />
                    </div>

                    <div class="register-input-field">
                        <button type="submit" class="register-btn-submit" name="register" id="register">Register</button>
                    </div>

                </div>

            </form>

        </div>
    </body>