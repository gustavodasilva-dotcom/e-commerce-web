@{
    ViewData["Title"] = "Register | Products";
}

@section Scripts {

    <script src="~/lib/plentz-jquery-maskmoney-cdbeeac/dist/jquery.maskMoney.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="~/js/Registration/Product/Process.js"></script>

}

    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/Global/00_Global.css" />
    </head>
    <body>
        <button type="button" class="default-button" id="btn-edit">Edit</button>

        <div class="register-wrapper">

            <!--- Modal --->
            <div id="div_Message" class="modal">

                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p></p>
                </div>

            </div>
            <!--- Modal --->

            <div>
                <h1 class="register-title">Register</h1>
            </div>

            <form>

                <div class="register-form">

                    <div class="register-alert" style="display: none;"><p></p></div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-name" placeholder="Name" />
                    </div>

                    <div class="register-input-field">
                        <textarea placeholder="Description" id="register-input-description"></textarea>
                    </div>

                    <div class="register-select-field">
                        <select name="subcategories" class="register-select" id="register-select-subcategories">
                            <option value="" disabled selected>Select a subcategory</option>
                        </select>
                    </div>

                    <div class="register-select-field">
                        <select name="manufacturers" class="register-select" id="register-select-manufacturers">
                            <option value="" disabled selected>Select a manufacturer</option>
                        </select>
                    </div>

                    <h2 class="register-title-2">Product's prices</h2>

                    <div class="register-select-field">
                        <select name="currencies" class="register-select" id="register-select-currencies">
                            <option value="" disabled selected>Select a currency</option>
                        </select>
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-price" placeholder="Price" />
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-discount" pattern="^[0-9]*$" placeholder="Discount" />
                    </div>

                    <h2 class="register-title-2">Product's measures</h2>

                    <div class="register-select-field">
                        <select name="weight-measure" class="register-select" id="register-select-mass-measurements">
                            <option value="" disabled selected>Select mass measurement</option>
                        </select>
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-weight" placeholder="Weight" />
                    </div>

                    <div class="register-select-field">
                        <select name="height-measure" class="register-select" id="register-select-height-measurements">
                            <option value="" disabled selected>Select height measurement</option>
                        </select>
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-height" placeholder="Height" />
                    </div>

                    <div class="register-select-field">
                        <select name="width-measure" class="register-select" id="register-select-width-measurements">
                            <option value="" disabled selected>Select width measurement</option>
                        </select>
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-width" placeholder="Width" />
                    </div>

                    <div class="register-select-field">
                        <select name="length-measure" class="register-select" id="register-select-length-measurements">
                            <option value="" disabled selected>Select length measurement</option>
                        </select>
                    </div>

                    <div class="register-input-field">
                        <input type="text" style="text-transform: uppercase;" class="register-input" id="register-input-length" placeholder="Length" />
                    </div>

                    <h2 class="register-title-2">Stock details</h2>

                    <div class="register-input-field">
                        <input type="number" style="text-transform: uppercase;" class="register-input" id="register-input-stock" min="0" pattern="^[0-9]*$" placeholder="Quantity" />
                    </div>

                    <h2 class="register-title-2">Product's image</h2>

                    <div class="register-input-field">
                        <input type="file" class="register-input-file" id="register-input-file" multiple="multiple" accept=".gif,.jpg,.jpeg,.png" />
                    </div>

                    <div class="register-alert" style="display: none;"><p></p></div>

                    <div class="register-input-field">
                        <button type="button" class="register-btn-submit" name="register" id="btn-register-update">Register</button>
                    </div>

                </div>

            </form>

        </div>
    </body>