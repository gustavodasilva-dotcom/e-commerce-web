@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Loja</title>
    <link rel="stylesheet" href="~/css/Global/00_Global.css" />
    <link rel="stylesheet" href="~/css/Global/Message.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Loja.Web.Presentation.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
           
            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Loja</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>

                        @if (Accessor.HttpContext.Session.Keys.Any())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Manufacturers" asp-action="Index">Manufacturers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Register">Users</a>
                            </li>
                        }

                    </ul>

                    @if (!Accessor.HttpContext.Session.Keys.Any())
                    {
                        <button type="button" class="login-upper-button-white" onclick="window.location.href = '/Accounts/Register';">Sign up</button>
                        <button type="button" class="login-upper-button" onclick="window.location.href = '/Accounts/Login';">Login</button>
                    }
                    else
                    {
                        <div class="user-content">
                            <span class="user-logged">User name</span>
                            <div class="dropdown-content">
                                <a href="/ShoppingCarts/Details">Shopping cart</a>
                                <a href="#" id="logout-button" onclick="Logout()">Log out</a>
                            </div>  
                        </div>
                    }

                </div>

            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Loja
        </div>
    </footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/plentz-jquery-maskmoney-cdbeeac/dist/jquery.maskMoney.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Global/00_Global.js"></script>
    <script src="~/js/Global/Accounts.js"></script>
    <script src="~/js/Global/Addresses.js"></script>
    <script src="~/js/Global/Categories.js"></script>
    <script src="~/js/Global/Contacts.js"></script>
    <script src="~/js/Global/Orders.js"></script>
    <script src="~/js/Global/Payments.js"></script>
    <script src="~/js/Global/Manufacturers.js"></script>
    <script src="~/js/Global/Message.js"></script>
    <script src="~/js/Global/ShoppingCarts.js"></script>
    <script src="~/js/Registration/Image/Images.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>