@{
    ViewData["Title"] = "Select pay | Orders";
}

@section Scripts {

    <script src="~/js/Registration/Order/SelectPay.js"></script>

}

    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/Global/00_Global.css" />
        <link rel="stylesheet" href="~/css/Details/SelectPay.css" />
    </head>
    <body>
        <div class="register-wrapper">

            <div>
                <h1 class="register-title">Select pay</h1>
            </div>

            <form>

                <div class="register-form">

                    <div id="register-items-card"></div>

                    <div class="register-select-field">
                        <select name="payment-types" class="register-select" id="register-select-payment-types">
                            <option value="">Select a payment type</option>
                        </select>
                    </div>

                    <div id="card-details" style="display: none;">
                        <div class="card-input-field">
                            <label for="card-number">Card number</label>
                            <input type="number" class="card-info-input" id="card-number" pattern="^[0-9]*$" />
                        </div>

                        <div class="card-input-field">
                            <label for="card-name">Name at the card</label>
                            <input type="text" class="card-info-input" id="card-name" />
                        </div>

                        <div class="card-input-field">
                            <label for="card-month">Expiration date</label>
                            <input type="number" class="card-info-input-sm" id="card-month" pattern="^[0-9]*$" maxlength="2" />
                            <input type="number" class="card-info-input-sm" id="card-year" pattern="^[0-9]*$" />
                        </div>

                        <div class="card-input-field">
                            <label for="card-cvv">CVV</label>
                            <input type="number" class="card-info-input" id="card-cvv" pattern="^[0-9]*$" maxlength="3" />
                        </div>

                        <div class="card-input-field" id="card-quantity-field" style="display: none;">
                            <label for="card-quantity">Quantity</label>
                            <select name="card-quantity" class="card-info-select" id="card-quantity">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>

                    <div class="register-input-field">
                        <button type="button" class="register-btn-submit" name="move-next" id="btn-move-next">Move next</button>
                    </div>

                </div>

            </form>

        </div>
    </body>